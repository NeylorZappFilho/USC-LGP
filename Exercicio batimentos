package Aula04;
import java.util.Scanner;
public class Exercicio03 {
	 public static void main(String[] args) {
	        Scanner scanner = new Scanner(System.in);

	        System.out.print("Digite sua idade: ");
	        int idade = scanner.nextInt();

	        System.out.print("Digite seu batimento cardíaco: ");
	        int batimentos = scanner.nextInt();

	        if (idade > 60 && batimentos > 150) {
	            System.out.println("Classificação: URGENTE");
	        } else if (idade > 60 && batimentos <= 150) {
	            System.out.println("Classificação: URGÊNCIA MODERADA");
	        } else if (idade <= 60 && batimentos > 150) {
	            System.out.println("Classificação: URGÊNCIA MODERADA");
	        } else {
	            System.out.println("Classificação: NÃO URGENTE");
	        }

	        scanner.close();
	    }
	}

